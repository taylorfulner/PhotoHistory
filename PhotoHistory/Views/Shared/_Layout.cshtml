<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <link rel="stylesheet" type="text/css" href="~/Custom/OverrideBootstrap.css" />
    <script src="~/Custom/BootstrapOverride.js"></script>
</head>

<body>
    <nav class="navbar navbar-inverse navbar-fixed-top">
        <div class="container" id="top-nav">
            <nav class="navbar-expand-lg navbar-light bg-light">
            </nav>
            <div>
                @Html.ActionLink("Traced", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>

            <div>
                @Html.Partial("_LoginPartial")
            </div>
        </div>
    </nav>

    <div class="wrapper">
        <nav id="sidebar">
            <div class="sidebar-header">
                <h3>Menu</h3>
            </div>
            <ul class="list-unstyled components">
                <li>
                    @Html.ActionLink("Home", "Index", "Home")
                </li>
                <li>
                    @Html.ActionLink("Photos", "Index", "Photo")
                </li>
                <li>
                    @Html.ActionLink("Tags", "Index", "Tag")
                </li>
            </ul>

        </nav>
    </div>

    <div class="container body-content">
        @RenderBody()
        <hr />
    </div>

    <div>
        <footer class="navbar-fixed-bottom">
            <p>&copy; @DateTime.Now.Year - <a href="taylorf.com" target="_blank">TaylorF.com</a></p>
        </footer>
    </div>
</body>
</html>