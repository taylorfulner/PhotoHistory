@using System.Linq;

@model IEnumerable<PhotoHistory.Models.PhotoList>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>

@if (TempData.ContainsKey("SaveResult"))
{
    <div class="alert alert-success fade in" role="alert">
        @ViewBag.SaveResult
        <button type="button" class="close" data-dismiss="alert">
            <span>&times;</span>
        </button>
        @TempData["SaveResult"]
    </div>
}

<table class="table">
    <tr>
        <th>
            Photo
        </th>
        <th>
            Photo Name
        </th>
        <th>
            Photo Date
        </th>
        <th>
            Tags
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
<tr>
    <td>
        <img alt="Image" src="@Url.Content("~/UploadedPhotos/" + @Html.DisplayFor(modelItem => item.Image))" width="50">
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.PhotoName)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.PhotoDate)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Tags)
    </td>
    <td>
        @Html.ActionLink("Edit", "Edit", new { id = item.PhotoId }) |
        @Html.ActionLink("Details", "Details", new { id = item.PhotoId }) |
        @Html.ActionLink("Delete", "Delete", new { id = item.PhotoId })
    </td>
</tr>
    }

</table>